<h1 class="text-center card-header">Brand index </h1>

<div class="card-header text-center">
  <%= link_to 'Add new Brand', new_brand_path , class: 'btn btn-primary my-4' %>
</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>
  <tbody>
  <% @brands.each do |brand| %>
    <tr>
      <td><%= brand.name %></td>
      <td><%= link_to 'Edit', edit_brand_path(brand) , class: 'btn btn-warning '%></td>
      <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger '  %></td>
    </tr>
  <% end %>
  </tbody>
</table>

