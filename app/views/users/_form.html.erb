<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password %>
  </div>
  <% if !logged_in?%>
  <div class="field">
    <%= collection_select(:user, :role_id, Role.all, :id, :roles,{prompt: 'Please select role'},  {class: 'form-control '}) %>
  </div>
  <%end%>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
