
<h1 class="text-center card-header">City index </h1>


<br>

<div class="card-header text-center">
  <%= link_to 'Add new City', new_city_path , class: 'btn btn-primary my-4' %>
</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>
  <tbody>
  <% @cities.each do |city| %>
    <tr>
      <td><%= city.name  %></td>
      <td><%= link_to 'Edit', edit_city_path(city), class: 'btn btn-warning '  %></td>
      <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger '  %></td>
    </tr>
  <% end %>
  </tbody>
</table>
